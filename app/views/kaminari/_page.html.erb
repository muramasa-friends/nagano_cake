<% if page.current? %>
  <li class="page-item">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link backcolor-active backcolor-hover text-light rounded-circle' %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link backcolor text-light rounded-circle' %>
  </li>
<% end %>
