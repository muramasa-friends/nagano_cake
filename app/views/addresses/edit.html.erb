<!--配送先編集フォーム-->
<div class="container">
  <h2 class='page_title my-4'>配送先編集</h2>
  <%= render 'layouts/errors', obj: @address %>
  <%= form_with model:@address, class: 'form-horizontal col-md-9 col-sm-12', local: true do |f| %>
    <div class='form-group'>
      <%= f.label :postal_code, '郵便番号(ハイフンなし)', class: 'col-md-3 col-sm-4 small' %>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: 'postal_code', placeholder: '0000000', class: 'form-control col-md-3 col-sm-8' %>
    </div>

    <div class='form-group'>
      <%= f.label :address, '住所', class: 'col-md-3 col-sm-4 small'  %>
      <%= f.text_field :address, autocomplete: 'address', placeholder: '東京都渋⾕区代々⽊神園町0-0', class: 'form-control col-md-6 col-sm-8' %>
    </div>

    <div class='form-group'>
      <%= f.label :name, '宛名', class: 'col-md-3 col-sm-4 small' %>
      <%= f.text_field :name, autocomplete: 'name', placeholder: '令和道⼦', class: 'form-control col-md-3 col-sm-8' %>
      <%= f.submit '変更内容を保存', class:'btn btn-sm btn-success px-4 offset-md-3 mt-4' %>
    </div>
  <% end %>
</div>