<!--配送先登録/一覧ページ-->
<div class="container">
<p>配送先登録/一覧</p>
  <!--配送先登録フォーム-->
  <%= form_with model:@address, class: 'form-horizontal col-md-9 col-sm-12', local: true do |f| %>
    <div class='form-group'>
      <%= f.label :postal_code, '郵便番号(ハイフンなし)', class: 'col-md-3 col-sm-4 small' %>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: 'postal_code', placeholder: '0000000', class: 'form_controller col-md-3 col-sm-8' %>
    </div>

    <div class='form-group'>
      <%= f.label :address, '住所', class: 'col-md-3 col-sm-4 small'  %>
      <%= f.text_field :address, autofocus: true, autocomplete: 'address', placeholder: '東京都渋⾕区代々⽊神園町0-0', class: 'form_controller col-md-6 col-sm-8' %>
    </div>

    <div class='form-group'>
      <%= f.label :name, '宛名', class: 'col-md-3 col-sm-4 small' %>
      <%= f.text_field :name, autofocus: true, autocomplete: 'name', placeholder: '令和道⼦', class: 'form_controller col-md-3 col-sm-8' %>
      <%= f.submit '新規登録', class:'btn btn-sm btn-success px-4 offset-md-3' %>
    </div>
  <% end %>

  <!--配送先一覧-->
   <table class="table col-md-8 mt-5 table-bordered">
    <thead class="thead-light">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to '編集する',  edit_address_path(address), class:"btn btn-sm btn-success" %>
          <%= link_to '削除する',  address_path(address), method: :delete, class:"btn btn-sm btn-danger ml-1" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

