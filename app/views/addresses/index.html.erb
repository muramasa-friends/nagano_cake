<p>配送先登録/一覧</p>


<%= form_with model:@address, local: true do |f| %>
  <div class='form-group'>
    <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: 'postal_code', placeholder: '0000000', class: 'form_controller' %>
  </div>

  <div class='form-group'>
    <%= f.label :address, '住所' %>
    <%= f.text_field :address, autofocus: true, autocomplete: 'address', placeholder: '東京都渋⾕区代々⽊神園町0-0', class: 'form_controller' %>
  </div>

  <div class='form-group'>
    <%= f.label :name, '宛名' %>
    <%= f.text_field :name, autofocus: true, autocomplete: 'name', placeholder: '令和道⼦', class: 'form_controller' %>
  </div>

　<div class='form-group'>
    <%= f.label :customer_id %>
    <%= f.hidden_field :customer_id, class: 'form_controller' %>
  </div>

  <div class="form-group">
    <%= f.submit '新規登録', class: 'btn btn-succeess px-2' %>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to '編集する',  edit_address_path(address), class:"btn btn-succeess" %>
        <%= link_to '削除する',  address_path(address), method: :delete, class:"btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
