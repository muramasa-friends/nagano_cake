<div class="container">
  <div class="row">
    <div class="col-md-3 mb-4 bg-light"><h3>ショッピングカート</h3></div>
    <div class="col-md-3 offset-md-6"><%= link_to "カートを空にする", customer_cart_items_path(current_customer.id), method: :delete, class:"btn btn-danger" %></div>
  </div>
  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @sum = 0 %>
      <% @sub_total = 0 %>
      <% @cart_items.each do |cart_item| %>
      <% @sub_total = cart_item.add_tax_price * cart_item.amount %>
      <tr>
        <td>
          <div><%= attachment_image_tag cart_item.item, :image, :fill, 50, 50 %></div>
          <div><%= cart_item.item.name %></div>
        </td>
        <td><%= (cart_item.add_tax_price).to_s(:delimited) %></td>
        <td>
          <%= form_with model: cart_item, url:customer_cart_item_path(current_customer, cart_item), local:true do |f| %>
          <div class="row ml-2">
            <div><%= f.select :amount, options_for_select((1..50).to_a, {selected: cart_item.amount}), class:"form-control" %></div>
            <div><%= f.submit "変更", class:"btn btn-success" %></div>
          </div>
          <% end %>
        </td>
        <td>
          <%= @sub_total.to_s(:delimited) %>
          <% @sum += @sub_total %>
        </td>
        <td><%= link_to "削除する", customer_cart_item_path(current_customer, cart_item), method: :delete, class:"btn btn-danger"%></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="col-md-4"><%= link_to "買い物を続ける", root_path, class:"btn btn-primary" %></div>
    <div class="col-md-4 offset-md-4">
      <table class="table table-bordered">
        <tr>
          <td>合計金額</td>
          <td>
            <%= @sum.to_s(:delimited) %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="offset-5">
    <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
  </div>
</div>


