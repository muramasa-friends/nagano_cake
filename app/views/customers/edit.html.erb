<div class='container'>
  <h5 class='offset-md-1 pb-4'>会員情報編集</h5>
  <div class='row'>
    <div class="col-sm-12 col-md-9 col-lg-9 px-5 px-sm-0">
      <%= form_with model: @customer, url: customer_path, local:true do |f| %>

        <!-- エラーメッセージ-->
        <% if @customer.errors.any? %>
          <div id ="error_explanation">
            <h3><%= @customer.errors.count %> error prohibited this book from being saved:</h3>
            <ul>
              <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field row">
          <%= f.label "氏名", class: "col-md-3" %>
          <div class="col-md-8 form-inline">
            <%= f.text_field :last_name, class: "form-control mr-md-3" %>
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>

        <div class="field row pt-2">
          <%= f.label "フリガナ", class: "col-md-3" %>
          <div class="col-md-8 form-inline">
            <%= f.text_field :last_name_kana, class: "form-control mr-md-3" %>
            <%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
        </div>

        <div class="field row pt-2">
          <%= f.label :postal_code, "郵便番号", class: "col-md-3" %>
          <div class="col-md-3">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>

        <div class="field row pt-2">
          <%= f.label :address, "住所", class: "col-md-3" %>
          <div class="col-md-7">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="field row pt-2">
          <%= f.label :telephone_number, "電話番号", class: "col-md-3" %>
          <div class="col-md-3">
            <%= f.text_field :telephone_number, class: "form-control" %>
          </div>
        </div>

        <div class="field row pt-2">
          <%= f.label :email, "メールアドレス", class: "col-md-3" %>
          <div class="col-md-3">
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="actions pt-3">
          <%= f.submit "編集内容を保存", class: 'btn btn-sm btn-success px-4 offset-md-3' %>
          <%= link_to "退会する", customers_quit_path,  class: 'btn btn-sm btn-danger px-4 offset-md-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>