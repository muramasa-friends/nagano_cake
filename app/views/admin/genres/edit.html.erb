<div class='container'>
  <h2 class='page_title mt-4'>ジャンル編集</h2>
  <%= render 'layouts/errors', obj: @genre %>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 pt-4">
      <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
        <div class="form-row">
          <div class="form-group row">
            <%= f.label :name, 'ジャンル名', class: "form-label col-auto" %>
            <div class="col-auto">
            <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.submit "変更を保存", class: 'btn btn-red ml-3' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
