<h5 class='offset-md-2'>ジャンル編集</h5>
<div class='container'>
  <%= render 'layouts/errors', obj: @genre %>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 pt-4">
      <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
        <div class="form-row">
          <div class="form-group row">
            <%= f.label :name, 'ジャンル名', class: "form-label col-auto" %>
            <div class="col-auto">
            <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.submit "変更を保存", class: 'btn btn-success ml-3' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
