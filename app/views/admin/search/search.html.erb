<div class="container">
  <div class="row">
    <h2>検索ワード '<%= @value %>'</h2>
    <table class="table">
      <% if @model == "customer" %>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @datas.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted %>
                  <div class="text-muted"><strong><%= "退会" %></strong></div>
                <% else %>
                  <div class="text-success"><strong><%= "有効" %></strong></div>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      <% else %>
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @datas.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.price.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_active == true %>
                  <span class="text-success">販売中</span>
                <% else %>
                  <span class="text-muted">販売停止中</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
    <div>
      <%= paginate @datas %>
    </div>
  </div>
</div>
