<h2>商品編集</h2>
<div class="container">
  <div class="row">
    <div class="max-auto">
      <%= form_with model: @item, local:true do |f| %>
        <p>商品画像 <%= f.attachment_field :image %></p>
        <p>商品名 <%= f.text_field :name %></p>
        <p>商品説明 <%= f.text_area :introduction %></p>
        <p>ジャンル <%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] } %></p>
        <p>税抜価格 <%= f.text_field :price %>円</p>
        <p>
          販売ステータス
          <%= f.radio_button :is_active, '1', checked: true %>
          <%= f.label :is_active, '販売中', value: 1 %>
          <%= f.radio_button :is_active, '0', checked: true %>
          <%= f.label :is_active, '販売停止中', value: 0 %>
        </p>
        <p><%= f.submit "変更を保存", class: "btn btn-success" %></p>
      <% end %>
    </div>
  </div>
</div>