<h5 class='offset-md-2'>商品編集</h5>
<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @item, local:true do |f| %>
        <div class="field">
          <%= f.label :image, "商品画像", class: "col-3" %>
          <%= f.attachment_field :image, class: "col-8" %>
        </div>
        <div class="field mt-2">
          <%= f.label :name, "商品名", class: "col-3" %>
          <%= f.text_field :name, class: "col-8" %>
        </div>
        <div class="field mt-2">
          <%= f.label :introduction, "商品説明", class: "col-3" %>
          <%= f.text_area :introduction, class: "col-8" %>
        </div>
        <div class="field mt-2">
          <%= f.label :genre, "ジャンル", class: "col-3" %>
          <%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] }, {}, {class: "col-8"} %>
        </div>
        <div class="field mt-2">
          <%= f.label :price, "税抜価格", class: "col-3" %>
          <%= f.text_field :price, class: "col-8" %>円
        </div>
        <div class="field mt-2">
          <%= f.label :is_active, "販売ステータス", class: "col-4" %>
          <%= f.radio_button :is_active, '1', checked: true %>
          <%= f.label :is_active, '販売中', value: 1 %>
          <%= f.radio_button :is_active, '0', checked: true %>
          <%= f.label :is_active, '販売停止中', value: 0 %>
        </div>
        <div class="actions mt-2">
          <%= f.submit "変更を保存", class: "btn btn-success px-4 offset-md-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>