<h2>商品新規登録</h2>
<%= form_with model: @item, local:true do |f| %>
<div class="form-group">
  <%= f.label :name, "商品名" %>
  <%= f.text_field :name %>
</div>

<div class="form-group">
  <%= f.label :introduction, "商品説明" %>
  <%= f.text_area :introduction %>
</div>

<div class="form-group">
  <%= f.label :price, "税抜価格" %>
  <%= f.text_field :pricee, :placeholder => "1000" %>円
</div>

<div class="form-group">
  <%= f.label :genre_id, "税抜価格" %>
  <%= f.collection_select :pricee, :placeholder => "1000" %>円
</div>

<div class="form-group">
  <%= f.label :"販売ステータス" %>
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "販売中" %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "販売停止中" %>
</div>

<% end %>

