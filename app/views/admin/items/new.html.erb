<div class="cotainer">
  <div class="row">
    <h2>商品新規登録</h2>
    <div class="mx-auto col-7">
      <%= form_with model: @item, local:true do |f| %>
        <div class="form-group">
          <%= f.label :image, "商品名", class: "col-sm-3 form-label" %>
          <%= f.attachment_field :image, class: "form-control-file" %>
        </div>

        <div class="form-group">
          <%= f.label :name, "商品画像", class: "col-sm-3 form-label" %>
          <%= f.text_field :name, :placeholder => "商品名", class: "col-sm-9 form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "商品説明", class: "col-sm-3 form-label" %>
          <%= f.text_area :introduction, :placeholder => "ここに説明文を記述します",　class: "col-sm-9 form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :genre_id, "ジャンル", class: "col-sm-3 form-label" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --", class: "col-sm-9 form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :price, "税抜価格", class: "col-sm-3 form-label" %>
          <%= f.text_field :price, :placeholder => "1000", class: "col-sm-9 form-control"%>円
        </div>

        <div class="form-group">
          <%= f.label :"販売ステータス", class: "col-sm-3 form-label" %>
          <%= f.radio_button :is_active, :true, class: "form-control"%>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, :false, class: "form-control" %>
          <%= f.label :is_active, "販売停止中" %>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録", class: 'btn btn-success'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
