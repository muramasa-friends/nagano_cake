<h5 class='offset-md-2'>商品新規登録</h5>
<div class="cotainer">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @item, url: admin_items_path, local:true do |f| %>

        <%= render 'layouts/errors', obj: @item %>

        <div class="form-group row">
          <%= f.label :image, "商品画像", class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= f.attachment_field :image, class: "form-control-file" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :name, "商品名", class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= f.text_field :name, :placeholder => "商品名", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :introduction, "商品説明", class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= f.text_area :introduction, :rows => "5", :placeholder => "ここに説明文を記述します", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :genre_id, "ジャンル", class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "-- 選択してください --", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :price, "税抜価格", class: "col-sm-4 col-form-label" %>
          <div class="col-sm-8" >
            <%= f.text_field :price, :placeholder => "1000" %>円
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :"販売ステータス", class: "col-sm-4 col-form-label" %>
          <div class="form-check form-check-inline">
            <%= f.radio_button :is_active, :true, class: "form-check-input ml-3" %>
            <%= f.label :is_active, "販売中", value: true, class: "form-check-label" %>
          </div>
          <div class="form-check form-check-inline">
            <%= f.radio_button :is_active, :false, class: "form-check-input ml-3" %>
            <%= f.label :is_active, "販売停止中", value: false, class: "form-check-label" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録", class: 'btn btn-success mx-auto d-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
