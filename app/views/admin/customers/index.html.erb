
<div class="container">
  <h2>会員一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id%></td>
          <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          
          <td>
            <% if customer.is_deleted %>
              <%= "退会" %>
            <% else %>
              <%= "有効" %>
            <% end %>
          </td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="col-md-1 col-md-offset-6 mx-auto">
    <%= paginate @customers %>
  </div>
  
</div>

