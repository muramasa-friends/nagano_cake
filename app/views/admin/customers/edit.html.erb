<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員編集</h2>

<%= form_with model: @customer, local:true do |f| %> 

  <div>
    <p>会員ID</p>
    <p><%= @customer.id %></p>
  </div>
  
  <div class="field">
    <%= f.label "名前" %>
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %>
    <%= f.label :last_name_kana, "(セイ)" %>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.label :first_name_kana, "(メイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号（ハイフンなし）" %>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>
  
  <div class="field">
      <%= f.radio_button :is_deleted, true %>
      <%= f.label :is_deleted, '有効', value: false %>
      <%= f.radio_button :is_deleted, false %>
      <%= f.label :is_deleted, '退会', value: true %>
  </div>

<% end %>