  <table class="table bg-white">
    <thead class="thead-light">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% orders.each do |order| %>
        <% customer = Customer.find(order.customer_id) %>
        <tr>
          <td class="underline">
            <%= link_to order.created_at.strftime('%Y/%m/%d %T'), admin_order_path(order) %>
          </td>
          <td><%= customer.full_name %></td>
          <td><%= order.order_items.sum(:amount) %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>