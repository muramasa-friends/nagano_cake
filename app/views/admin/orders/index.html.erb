<div class="container">
  <div class="row col-12 col-md-10 col-lg-10 px-sm-0 mx-auto">
  <h2 class='page_title mb-4'>注文履歴一覧</h2>
  <table class="table bg-white">
    <thead class="thead-light">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <% customer = Customer.find(order.customer_id) %>
        <tr>
          <td>
            <%= link_to order.created_at.strftime('%Y/%m/%d %T'), admin_order_path(order) %>
          </td>
          <td><%= customer.full_name %></td>
          <td><%= order.order_items.sum(:amount) %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
    <div>
      <%= paginate @orders %>
    </div>
</div>
