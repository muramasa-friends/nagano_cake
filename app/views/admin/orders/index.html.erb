
<p>注文履歴一覧</p>

<table class="table thead-light">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <% customer = Customer.find(order.customer_id) %>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= full_name(customer) %></td>
      <td><%= OrderItem.where(order_id: order.id).size %></td>
      <td><%= order.status.before_type_cast %></td>
    <% end %>
  </tbody>
</table>