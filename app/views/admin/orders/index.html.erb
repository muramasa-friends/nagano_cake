
<div class="container">
<p>注文履歴一覧</p>
  <table class="table col-md-8 mt-5">
    <thead class="thead-light">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <% customer = Customer.find(order.customer_id) %>
        <td>
          <%= link_to order.created_at.strftime('%Y/%m/%d %T'), admin_order_path(order) %>
        </td>
        <td><%= customer.full_name %></td>
        <td><%= order.order_items.sum(:amount) %></td>
        <td><%= order.status %></td>
      <% end %>
      <%= paginate @orders %>
    </tbody>
  </table>
</div>
