
<div class="container">
  <h2 class='page_title mt-4'>注文履歴一覧</h2>
  <table class="table col-md-8 mt-4">
    <thead class="thead-light">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <% customer = Customer.find(order.customer_id) %>
        <tr>
          <td>
            <%= link_to order.created_at.strftime('%Y/%m/%d %T'), admin_order_path(order) %>
          </td>
          <td><%= customer.full_name %></td>
          <td><%= order.order_items.sum(:amount) %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
      <%= paginate @orders %>
    </tbody>
  </table>
</div>
