<div class="container col-10">
  <div class="row d-flex align-items-end">
    <h2>商品一覧</h2>
    <h4>全<%= @items.count %>件</h4>
  </div>
  <div class="row">
    <% @item_page.each do |item| %>
      <div class="flex-column col-3 col-sm-3 my-4">
        <%= link_to  item_path(item.id) do %>
        <div class="card shadow-sm" style="width: 16rem;">
          <%= attachment_image_tag item, :image, :fill, 250, 200, format: 'jpeg', class: "card-img-top" %>
          <div  class="card-body">
            <div class="card-text">
              <div class="item-name"><%= item.name %></div><br>
              ¥<%= item.price.to_s(:delimited, delimiter: ',') %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div>
  <%= paginate @item_page %>
</div>