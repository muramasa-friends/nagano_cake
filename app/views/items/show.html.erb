<div class="container offset-4">
  <div class="row">
    <div>
      <%= attachment_image_tag @item, :image, :fill, 250, 200 %>
    </div>
    <div class="offset-1">
      <div>
        <h3><strong><%= @item.name %></strong></h3>
      </div>
      <div>
        <%= @item.introduction %>
      </div>
      <div class="d-flex">
        <h5><strong>¥ <%= @item.add_tax_price.to_s(:delimited) %></strong></h5> <span>(税込)</span>
      </div>
      <div class="row">
        <%= form_with model: @item, local: true do |f| %>
          <%= f.select :cart_items, options_for_select((1..10).to_a), {include_blank: "個数選択"}, class:"form-control" %>
          <%= f.submit "カートに入れる", class:"btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>